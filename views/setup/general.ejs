<%- include('./header.ejs'); %>




<div class="col-sm-5 bg-white p-3">
<form class="" action="/asw-app-setup/step-general" method="post">
    <h6>Son 1 adım kaldı</h6><hr>
    <h4>Genel Ayarlar</h4><hr>

    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">Site Başlığı:</label>
        <div class="col-sm-6">
            <input type="text" name="title" class="form-control form-control" required autofocus/>
        </div>
    </div>

    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">Site Açıklaması:</label>
        <div class="col-sm-8">
            <input type="text" name="description" class="form-control form-control" />
        </div>
    </div>

    <h4>Yetkili Kullanıcı Hesabı Ayarları</h4><hr>

    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">Kullanıcı Adı:</label>
        <div class="col-sm-6">
            <input type="text" name="username" class="form-control form-control" required/>
        </div>
    </div>

    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">Parolası</label>
        <div class="col-sm-6">
            <input type="password" name="password" class="form-control form-control" required/>
        </div>
    </div>

    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">E-Posta Adresi:</label>
        <div class="col-sm-6">
            <input type="email" name="email" class="form-control form-control" required/>
        </div>
    </div>



    <hr>
    <div class="clearfix">
        <button type="submit" class="btn btn-primary btn-sm float-right">Kurulumu Tamamla</button>
    </div>
</form>
</div>

<%- include('./footer.ejs'); %>
