<%- include('./header.ejs'); %>

<div class="col-sm-6 bg-white p-3">
    <h3>Veritabanı Ayarları</h3><hr>
<form class="" action="/asw-app-setup/step-database" method="post">


    <div class="form-group row">
        <label for="" class="col-12 col-sm-5 col-md-4 col-form-label">Sunucu (Host)</label>
        <div class="col-sm-6"><input type="text" name="host" class="form-control" value="localhost"></div>
    </div>

    <div class="form-group row">
        <label for="" class="col-12 col-sm-5 col-md-4 col-form-label">Veritabanı (Database)</label>
        <div class="col-sm-6"><input type="text" name="database" class="form-control" value=""></div>
    </div>

    <div class="form-group row">
        <label for="" class="col-12 col-sm-5 col-md-4 col-form-label">Kullanıcı (User)</label>
        <div class="col-sm-6"><input type="text" name="username" class="form-control" value=""></div>
    </div>

    <div class="form-group row">
        <label for="" class="col-12 col-sm-5 col-md-4 col-form-label">Şifre (Password)</label>
        <div class="col-sm-6"><input type="password" name="password" class="form-control" value=""></div>
    </div>

    <hr>
    <div class="clearfix">
        <button type="submit" class="btn btn-primary btn-sm float-right">Sonraki Adım</button>
    </div>

</form>
</div>

<%- include('./footer.ejs'); %>
